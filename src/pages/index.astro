        </div>
      </div>
    </div>
    <div class="flex gap-2 text-slate-800">
      {links.map(({ Icon, url, label }) => (
      <a href={url} class="opacity-70 hover:opacity-90 hover:-mt-0.5 transition-all" target="_blank" aria-label={label}>
          <Icon color="gray">
        </a>
        ))}
    </div>
    <div class="flex flex-col items-center mt-6 text-slate-500 font-serif">
      <h3 class="text-lg border-b border-slate-300 w-48 text-center mb-5">About Me</h3>
      <ul class="w-full flex flex-col items-center gap-3 text-xs font-mono">
